<UserControl x:Class="CBR_converter.Views.ConverterView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CBR_converter.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource background}">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}" 
               x:Name="SettingsButtonStyle">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            
        </Style>
    </UserControl.Resources>
    <Grid>
        <ComboBox 
            Width="320"
            Height="30"
            Margin="40 22 0 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
        </ComboBox>
        <Label x:Name="ActualDate"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               FontSize="14"
               FontWeight="Medium"
               Padding="0"
               Margin="40 0 0 28" FontFamily="Montserrat Thin"
               >
            Курс Банка России на 2 мая 2022 года
        </Label>
    </Grid>
</UserControl>
